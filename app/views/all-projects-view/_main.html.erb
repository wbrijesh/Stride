<main>
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- start of cards -->

    <% @projects.each do |project| %>

    <div class="flex flex-wrap overflow-hidden sm:-mx-1 md:-mx-2 lg:-mx-3 xl:-mx-3">

      <div class="w-full overflow-hidden sm:my-1 sm:px-1 sm:w-1/2 md:my-2 md:px-2 md:w-1/2 lg:my-3 lg:px-3 lg:w-1/3 xl:my-3 xl:px-3 xl:w-1/3">
        <div class="max-w-sm bg-gray-200 border-2 border-gray-400 rounded overflow-hidden shadow-sm">
          <div class="px-6 py-4">
            <%= link_to project do %>
            <div class="font-bold hover:text-gray-600 text-xl mb-2"><%= project.name %></div>
            <% end %>
            <p class="text-gray-700 text-base">
              <%= project.description %>
            </p>
          </div>
          <div class="px-6 pb-4">
            <p class="text-gray-800 font-bold text-xs">Complete</p>
            <p class="text-gray-700 text-xs">25%</p>
          </div>
        </div>
      </div>

    </div>

    <% end %>

    <!-- end of cards -->
  </div>
</main>
